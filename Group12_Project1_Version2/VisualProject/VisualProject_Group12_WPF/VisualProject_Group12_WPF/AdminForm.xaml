<Window x:Class="VisualProject_Group12_WPF.AdminForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="943">
    <Grid Background="White">

        <TabControl Margin="0,0,0,-20" Background="Transparent" BorderBrush="#BDC3C7" BorderThickness="1" FontWeight="Bold" >
            <!-- User Management -->
            <TabItem Header="User Management">
                <Grid Margin="10">
                    <StackPanel Orientation="Vertical" >
                        <Label Content="Users" FontWeight="Bold" />
                        <DataGrid Name="usersDataGrid" Background="Transparent" AutoGenerateColumns="True" Height="200" />
                        <Label Content="Add New User"  FontWeight="Bold" Margin="0,20,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="User Name" />
                                <TextBox Name="usernameTextBox" Width="150" Height="30" Padding="5" Text="">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border CornerRadius="5" Background="White" BorderBrush="Gray" BorderThickness="1">
                                                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Password" />
                                <PasswordBox Name="passwordBox" Width="150" Height="30" Padding="5">
                                    <PasswordBox.Style>
                                        <Style TargetType="PasswordBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="PasswordBox">
                                                        <Border CornerRadius="5" Background="White" BorderBrush="Gray" BorderThickness="1">
                                                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </PasswordBox.Style>
                                </PasswordBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Role" />
                                <ComboBox Name="roleComboBox" Width="150">
                                    <ComboBoxItem Content="Admin" />
                                    <ComboBoxItem Content="Manager" />
                                    <ComboBoxItem Content="Staff" />
                                </ComboBox>
                            </StackPanel>

                            <Button Content="Add User" Click="AddUserButton_Click" Width="100" Margin="5" FontSize="13" FontWeight="SemiBold" BorderThickness="1">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="2" 
                    CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <!-- Normal state (no hover) -->
                                        <Setter Property="Background" Value="#3498DB"/>
                                        <!-- Light Blue Background -->
                                        <Setter Property="BorderBrush" Value="#2980B9"/>
                                        <!-- Darker Blue Border -->
                                        <Setter Property="Foreground" Value="White"/>
                                        <!-- White Text -->
                                        <Style.Triggers>
                                            <!-- Trigger for hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                                <!-- Darker Blue on Hover -->
                                                <Setter Property="BorderBrush" Value="#1C638C"/>
                                                <!-- Even Darker Blue Border -->
                                                <Setter Property="Foreground" Value="White"/>
                                                <!-- Keep Text White on Hover -->
                                            </Trigger>
                                        </Style.Triggers>


                                    </Style>
                                </Button.Style>
                            </Button>







                        </StackPanel>


                        <Label Content="Update User" FontWeight="bold"/>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="User Name "/>
                                <TextBox Name="currentName" Width="150">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border CornerRadius="5" Background="White" BorderBrush="Gray" BorderThickness="1">
                                                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Updated User Name "/>
                                <TextBox Name="updateName" Width="150">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border CornerRadius="5" Background="White" BorderBrush="Gray" BorderThickness="1">
                                                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Password"/>
                                <PasswordBox Name="updatePass" Width="150">
                                    <PasswordBox.Style>
                                        <Style TargetType="PasswordBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
