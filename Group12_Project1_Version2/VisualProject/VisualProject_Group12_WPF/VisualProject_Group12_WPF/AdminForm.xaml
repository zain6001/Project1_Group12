                            </StackPanel>

                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Updated Supplier Name" />
                                <TextBox Name="updateSupplierNameTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Contact Name" />
                                <TextBox Name="updateContactNameTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Phone" />
                                <TextBox Name="updatePhoneTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Email" />
