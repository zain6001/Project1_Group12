                                        </Style.Triggers>


                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>


            <!-- Supplier Management -->
            <TabItem Header="Supplier Management">
                <Grid Margin="10">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Suppliers" FontWeight="Bold" />
                        <DataGrid Name="suppliersDataGrid" AutoGenerateColumns="True" Height="200" />

                        <!-- Add Supplier -->
