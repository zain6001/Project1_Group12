                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                            <Button Content="Delete" Click="DeleteUserButton_Click"  Width="100" Margin="5" FontSize="13" FontWeight="SemiBold" BorderThickness="1"  >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}" 
BorderThickness="2" 
CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <!-- Normal state (no hover) -->
                                        <Setter Property="Background" Value="#3498DB"/>
                                        <!-- Light Blue Background -->
                                        <Setter Property="BorderBrush" Value="#2980B9"/>
                                        <!-- Darker Blue Border -->
                                        <Setter Property="Foreground" Value="White"/>
                                        <!-- White Text -->
                                        <Style.Triggers>
                                            <!-- Trigger for hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                                <!-- Darker Blue on Hover -->
                                                <Setter Property="BorderBrush" Value="#1C638C"/>
                                                <!-- Even Darker Blue Border -->
                                                <Setter Property="Foreground" Value="White"/>
                                                <!-- Keep Text White on Hover -->
                                            </Trigger>
                                        </Style.Triggers>


                                    </Style>
                                </Button.Style>
                            </Button>

                        </StackPanel>

                    </StackPanel>



                </Grid>
            </TabItem>

            <!-- Product Management -->
