                        <Label Content="Update Product" FontWeight="Bold" Margin="0,20,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Product ID" />
                                <TextBox Name="updateProductIdTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Product Name" />
                                <TextBox Name="updateProductNameTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Quantity" />
                                <TextBox Name="updateQuantityTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Unit Price" />
                                <TextBox Name="updateUnitPriceTextBox" Width="150" />
                            </StackPanel>
                            <Button Content="Update Product" Click="UpdateProductButton_Click" Width="120" Margin="5"  FontSize="13" FontWeight="SemiBold" BorderThickness="1" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}" 
BorderThickness="2" 
CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <!-- Normal state (no hover) -->
                                        <Setter Property="Background" Value="#3498DB"/>
                                        <!-- Light Blue Background -->
                                        <Setter Property="BorderBrush" Value="#2980B9"/>
                                        <!-- Darker Blue Border -->
