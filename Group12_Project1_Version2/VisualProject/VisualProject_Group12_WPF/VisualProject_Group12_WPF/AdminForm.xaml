                                                <!-- Darker Blue on Hover -->
                                                <Setter Property="BorderBrush" Value="#1C638C"/>
                                                <!-- Even Darker Blue Border -->
                                                <Setter Property="Foreground" Value="White"/>
                                                <!-- Keep Text White on Hover -->
                                            </Trigger>
                                        </Style.Triggers>


                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <Label Content="Delete Product" FontWeight="Bold" Margin="0,20,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Product ID" />
                                <TextBox Name="deleteProductIdTextBox" Width="150" />
                            </StackPanel>
                            <Button Content="Delete Product" Click="DeleteProductButton_Click" Width="100" Margin="5" FontSize="13" FontWeight="SemiBold" BorderThickness="1" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}" 
BorderThickness="2" 
CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <!-- Normal state (no hover) -->
