                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </PasswordBox.Style>
                                    </PasswordBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Role"/>
                                <ComboBox Name="updateCombo" Width="150" >
                                    <ComboBoxItem Content="Admin" />
                                    <ComboBoxItem Content="Manager" />
                                    <ComboBoxItem Content="Staff" />
                                </ComboBox>
                            </StackPanel>
                            <Button Content="Update" Click="UpdateUserButton_Click" Width="100" Margin="5" FontSize="13" FontWeight="SemiBold" BorderThickness="1">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}" 
BorderThickness="2" 
CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <!-- Normal state (no hover) -->
                                        <Setter Property="Background" Value="#3498DB"/>
                                        <!-- Light Blue Background -->
                                        <Setter Property="BorderBrush" Value="#2980B9"/>
                                        <!-- Darker Blue Border -->
                                        <Setter Property="Foreground" Value="White"/>
                                        <!-- White Text -->
                                        <Style.Triggers>
                                            <!-- Trigger for hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                                <!-- Darker Blue on Hover -->
                                                <Setter Property="BorderBrush" Value="#1C638C"/>
                                                <!-- Even Darker Blue Border -->
                                                <Setter Property="Foreground" Value="White"/>
                                                <!-- Keep Text White on Hover -->
                                            </Trigger>
                                        </Style.Triggers>


                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <Label Content="Delete User " FontWeight="Bold"/>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="User id"/>
                                <TextBox Name ="deleteUserName" Width=" 150">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
