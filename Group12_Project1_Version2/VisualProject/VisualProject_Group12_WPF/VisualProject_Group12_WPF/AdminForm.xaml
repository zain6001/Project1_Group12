                                <TextBox Name="addSupplierNameTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Contact Name" />
                                <TextBox Name="addContactNameTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Phone" />
                                <TextBox Name="addPhoneTextBox" Width="150" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <Label Content="Email" />
